<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Discussion</title>

    <% include ./partials/header.ejs %>

</head>
<body>

<!-- NAVBAR -->
<% include ./partials/navbar.ejs %>

<!-- Poll Question -->
<h2><%= poll.question %></h2>

<!-- Form for Replying -->
<form action="/discussions/<%= poll._id %>/replies/" method="post">
    <input type="text" name="body">
    <button>Reply</button>
</form>

<!--Replies Container-->
<ul>
    <!-- Ids of Each reply -->
    <% poll.replies.forEach((reply)=>{ %>
        <li><%= reply %></li>
    <% }) %>
</ul>


</body>
</html>